<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <style>
      body {
        height: 100vh;
        display: flex;
        align-items: center;
      }
      #friend {
        width: 350px;
        background-color: #26abe4;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <div class="container">
      <div
        class="row row-cols-1 row-cols-md-6 g-2 d-flex justify-content-center"
      >
        <% friend.forEach(element => {%>
        <div id="friend" class="card text-white m-2 text-center p-2 pt-3">
          <div class="card-img-top">
            <img
              class="rounded-circle shadow-4-strong w-50 h-100"
              src="/../<%=element.photo %>"
              alt=""
            />
          </div>
          <div class="card-body">
            <h5 class="card-title">Full Name: <%=element.fullName %></h5>
            <p class="card-text">Mobile: <%=element.mobile %></p>
            <p class="card-text">Age: <%=element.age %></p>
            <p class="card-text">Address: <%=element.address %></p>
            <p class="card-text">Pin code: <%=element.pin_code %></p>
            <p class="card-text">city: <%=element.city %></p>
            <p class="card-text">State: <%=element.state %></p>
            <p class="card-text">Country: <%=element.country %></p>
          </div>
        </div>
        <%}); %>
      </div>
    </div>
  </body>
</html>
