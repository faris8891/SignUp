<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <style>
      body {
        height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
      }
      label {
        margin: 8px 0px 8px 0px;
      }
      button {
        margin: 15px 10px 0px 10px;
        width: 120px;
        height: 40px;
      }
    </style>
    <title>Document</title>
  </head>
  <body>
    <div class="container w-25">
      <form
        action="http://127.0.0.1:3000/login/update"
        method="POST"
        class="form-control d-flex flex-column p-4"
        enctype="multipart/form-data"
      >
        <% updateDetails.forEach(element => {%>
        <label for="fullName">FullName</label>
        <input
          type="text"
          name="fullName"
          value="<%=element.fullName %>"
          required
        />

        <label for="mobile">mobile</label>
        <input
          type="number"
          name="mobile"
          disabled
          value="<%=element.mobile %>"
        />
        <label for="age">Age</label>
        <input type="number" name="age" value="<%=element.age %>" required />

        <label for="photo">Profile photo</label>
        <input type="file" name="photo" id="photo" />

        <label for="address">Address</label>
        <input
          type="text"
          name="address"
          value="<%=element.address %>"
          required
        />

        <label for="pin_code">Pin code</label>
        <input
          type="number"
          name="pin_code"
          value="<%=element.pin_code %>"
          required
        />

        <label for="state">State</label>
        <input type="text" name="state" value="<%=element.state %>" required />

        <label for="city">City</label>
        <input type="text" name="city" value="<%=element.city %>" required />

        <label for="country">Country</label>
        <input
          type="text"
          name="country"
          value="<%=element.country %>"
          required
        />

        <div class="d-flex justify-content-center">
          <button
            class="btn btn-primary"
            type="submit"
            name="mobile"
            value="<%=element.mobile%>"
          >
            Update
          </button>
          <button class="btn btn-warning" type="reset">Reset</button>
        </div>
        <%}); %>
      </form>
    </div>
  </body>
</html>
