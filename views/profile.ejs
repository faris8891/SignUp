<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD"
      crossorigin="anonymous"
    />
    <style>
      body {
        padding: 30px;
        background-color: rgb(255, 255, 255);
      }
      
      #container{
        height: 50vh; 
        display: grid;
        grid-template-columns: 1fr 3fr ;
        grid-template-rows: 100% ;
        margin: 0px 0px 30px 0px;

      }
      .item{
        margin: 10px;
        background-color: #26ABE4;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      button{
        width: 120px;
        margin-bottom: 10px;
      }
      
    </style>
    <title>Document</title>
  </head>
  <body >
    
    <div id="container"  >
      <div class="item card text-white ">
        <% profile.forEach(user => {%> 
          <div id="uer_p" class="card-img-top d-flex justify-content-center mb-3 text-white">
            <img
              class="rounded-circle shadow-4-strong w-50 "
              src="/../<%=user.photo %>"
              alt=""
            />
          </div>
          <h2 class="card-title"><%=user.fullName %></h2>
          <%}); %>
      </div>

      <div class="item card text-white">
        <% profile.forEach(user => {%> 
          <h2 class="card-title"><%=user.fullName %></h2>
          <h5 class="card-text">Age : <%=user.age %></h5>
          <h5 class="card-text">Mobile : <%=user.mobile %></h5>
          <h5 class="card-text">Address : <%=user.address %></h5>
          <h5 class="card-text">Pin code : <%=user.pin_code %></h5>
          <h5 class="card-text">City : <%=user.city %></h5>
          <h5 class="card-text">State : <%=user.state %></h5>
          <h5 class="card-text">Country : <%=user.country %></h5>
          <%}); %>
      </div>

    </div>
  </div>
    <div class="container">
    <div class="row row-cols-1 row-cols-md-6 g-2 d-flex justify-content-center ">
        <% friends.forEach(element => {%> 
        <div id="friend" class="card m-2 text-center p-2 pt-3">
          <div class="card-img-top">
            <img
              class="rounded-circle shadow-4-strong w-50 h-100"
              src="/../<%=element.photo %>"
              alt=""
            />
          </div>
          <div class="card-body">
            <h5 class="card-title"><%=element.fullName %></h5>
            <p class="card-text"><%=element.state %></p>

            <form action="http://127.0.0.1:3000/login/show" method="POST">
              <button class="btn btn-primary" type="submit" name="mobile" value=<%=element.mobile %>>Show Profile</button>
            </form>

            <form action="http://127.0.0.1:3000/login/updateDetails" method="POST">
              <button class="btn btn-warning" type="submit" name="mobile" value=<%=element.mobile %>>Update</button>
            </form>

            <form action="http://127.0.0.1:3000/login/delete" method="POST">
              <button class="btn btn-danger" type="submit" name="mobile" value=<%=element.mobile %>>Delete</button>
            </form>

          </div>
        </div>
        <%}); %>
      </div>
      </div>
    </div>
  </body>
</html>
